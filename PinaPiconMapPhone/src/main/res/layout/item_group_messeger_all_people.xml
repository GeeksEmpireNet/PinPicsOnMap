<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:background="@color/transparent"
    android:id="@+id/fullPeopleItem">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/peopleUserImage"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_round"
        android:background="@color/transparent"
        android:contentDescription="@string/theUserImageHint"
        apps:shapeDrawable="@drawable/circle" />

    <TextView
        android:id="@+id/peopleUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/peopleUserImage"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:lines="1"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/default_color_light"
        android:textSize="23sp"
        android:typeface="monospace"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/peopleEmail"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_below="@id/peopleUserName"
        android:layout_toEndOf="@id/peopleUserImage"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:lines="1"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:textStyle="normal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/default_color_light"
        android:textSize="13sp"
        android:typeface="monospace"
        android:linksClickable="true"
        android:background="@color/transparent" />

</RelativeLayout>